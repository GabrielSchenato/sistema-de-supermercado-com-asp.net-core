@model IEnumerable<sonmarket.Models.Estoque>
@{
    Layout = "_LayoutAdmin";
}
<h2>
    Estoque
</h2>
<hr />

<a asp-controller="Gestao" asp-action="NovoEstoque" class="btn btn-success">Criar novo estoque</a>
<hr />

<script>
    $(document).ready(function () {
    $('#estoque').DataTable();
    });
</script>

<table class="table table-striped table-bordered" id="estoque">
    <thead>
        <tr>
            <th>ID</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estoque in Model)
        {
            <tr>
                <td>
                    @estoque.Id
                </td>
                <td>
                    @estoque.Produto.Nome
                </td>
                <td>
                    @estoque.Quantidade
                </td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarEstoque/@estoque.Id">Editar</a>
                    <form asp-controller="Estoque" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@estoque.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>