@model sonmarket.DTO.FornecedorDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Novo fornecedor</h3>
<hr>
<form class="form-horizontal" asp-controller="Fornecedores" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do fornecedor">
    <span asp-validation-for="Nome"></span>

    <label asp-for="Email">E-Mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="E-Mail do fornecedor">
    <span asp-validation-for="Email"></span>

    <label asp-for="Telefone">Telefone</label>
    <input type="text" asp-for="Telefone" class="form-control" placeholder="Telefone do fornecedor">
    <span asp-validation-for="Telefone"></span>

    <br>
    <button class="btn btn-success">Cadastrar</button>
</form>