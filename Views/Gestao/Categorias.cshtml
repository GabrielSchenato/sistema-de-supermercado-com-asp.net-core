@model IEnumerable<sonmarket.Models.Categoria>
@{
    Layout = "_LayoutAdmin";
}
<h2>
    Categorias
</h2>
<hr />

<a asp-controller="Gestao" asp-action="NovaCategoria" class="btn btn-success">Criar nova categoria</a>
<hr />

<script>
    $(document).ready(function () {
    $('#categorias').DataTable();
    });
</script>

<table class="table table-striped table-bordered" id="categorias">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>
                    @categoria.Id
                </td>
                <td>
                    @categoria.Nome
                </td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>
                    <form asp-controller="Categorias" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>