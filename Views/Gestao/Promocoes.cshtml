@model IEnumerable<sonmarket.Models.Promocao>
@{
    Layout = "_LayoutAdmin";
}
<h2>
    Promoções
</h2>
<hr />

<a asp-controller="Gestao" asp-action="NovaPromocao" class="btn btn-success">Criar nova promoção</a>
<hr />

<script>
    $(document).ready(function () {
    $('#promocoes').DataTable();
    });
</script>

<table class="table table-striped table-bordered" id="promocoes">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Produto</th>
            <th>Porcentagem</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promocao in Model)
        {
            <tr>
                <td>
                    @promocao.Id
                </td>
                <td>
                    @promocao.Nome
                </td>
                <td>
                    @promocao.Produto.Nome
                </td>
                <td>
                    @promocao.Porcentagem%
                </td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarPromocao/@promocao.Id">Editar</a>
                    <form asp-controller="Promocoes" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@promocao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>