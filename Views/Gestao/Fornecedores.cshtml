@model IEnumerable<sonmarket.Models.Fornecedor>
@{
    Layout = "_LayoutAdmin";
}
<h2>
    Fornecedores
</h2>
<hr />

<a asp-controller="Gestao" asp-action="NovoFornecedor" class="btn btn-success">Criar novo fornecedor</a>
<hr />

<script>
    $(document).ready(function () {
    $('#fornecedores').DataTable();
    });
</script>

<table class="table table-striped table-bordered" id="fornecedores">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fornecedor in Model)
        {
            <tr>
                <td>
                    @fornecedor.Id
                </td>
                <td>
                    @fornecedor.Nome
                </td>
                <td>
                    @fornecedor.Email
                </td>
                <td>
                    @fornecedor.Telefone
                </td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarFornecedor/@fornecedor.Id">Editar</a>
                    <form asp-controller="Fornecedores" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@fornecedor.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>